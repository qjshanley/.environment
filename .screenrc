# Turn off that annoying start up message
startup_message off

# Turn the even more annoying whole-screen-flash-on-tab-complete "feature"
vbell off

# Remaps control+a to the tick/tilda key
escape ``

# more scrollbacks!
defscrollback 10000

#Turns out, I'm not a fan of adding tabs by default
#Define initial startup tabs
#<start tabs>
#bind c screen 1
#bind ^c screen 1
#screen -t bash
#screen -t dev
#screen -t run
#select 0
#</start tabs>

bind 'a' title
bind 'H' hardcopy -h
bind 'l' windowlist
bind 'n' focus down
bind 's' split
bind 'S' log
bind 't' focus up
bind 'x' remove
bind 'X' lockscreen

# Window list at the bottom. hostname, centered tabs and redmarked active windows:
hardstatus alwayslastline
hardstatus string '%{= ky}[ %{g}%H %{y}][ %{= kw}%?%-w%?%{R}%n*%t%?(%u)%?%{w}%?%+w%?%?%= %{y}][%{g} %l %{y}][%{B} %m/%d %{W}%c %{y}]'
