# Turn off that annoying start up message
startup_message off

# Turn the even more annoying whole-screen-flash-on-tab-complete "feature"
vbell off

# Remaps control+a to the tick/tilda key
escape ``

# more scrollbacks!
defscrollback 10000

bind 'a' title
bind 'h' hardcopy -h
bind 'l' windowlist
bind 'n' focus down
bind 's' split
bind 't' focus up
bind 'x' remove
bind 'X' lockscreen
#turn off the tick binding from (bound to F5)
bindkey -k k5 escape ^O^O
#turn on the tick binding again (bound to F6)
bindkey -k k6 escape ``

# Resize regions using SHIFT ARROW-Left and SHIFT ARROW-Right keys. Reset sizes with SHIFT ARROW-Down.
bindkey ^[[1;2B resize =
bindkey ^[[1;2C resize +5
bindkey ^[[1;2D resize -5

# Window list at the bottom. hostname, left-aligned tabs and redmarked active windows:
hardstatus alwayslastline
hardstatus string '%{= ky}[ %{g}%H %{y}][ %{= kw}%?%-w%?%{R}%n*%t%?(%u)%?%{w}%?%+w%?%?%= %{y}][%{g} %l %{y}][%{B} %m/%d %{W}%c %{y}]'
