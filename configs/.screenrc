# Turn off that annoying start up message
startup_message off

# Turn the even more annoying whole-screen-flash-on-tab-complete "feature"
vbell off

# Remaps control+a to the tick/tilda key
escape ^[^[

# more scrollbacks!
defscrollback 10000

# always fit after selecting a window
bind '0' eval 'select 0' 'fit'
bind '1' eval 'select 1' 'fit'
bind '2' eval 'select 2' 'fit'
bind '3' eval 'select 3' 'fit'
bind '4' eval 'select 4' 'fit'
bind '5' eval 'select 5' 'fit'
bind '6' eval 'select 6' 'fit'
bind '7' eval 'select 7' 'fit'
bind '8' eval 'select 8' 'fit'
bind '9' eval 'select 9' 'fit'

bind 'f' fit
bind 'F' flow
bind ' ' windowlist
bind 'n' focus next
bind 's' split
bind 'S' split -v
bind 't' focus prev
bind 'x' remove
bind 'X' lockscreen

# Focus regions using SHIFT ARROW.
bindkey ^[[1;2A resize -v +5
bindkey ^[[1;2B resize -v -5
bindkey ^[[1;2C resize -h +10
bindkey ^[[1;2D resize -h -10

# Resize regions using CMD ARROW. (Whatever is left of spacebar).
bindkey ^[[1;5A focus up
bindkey ^[[1;5B focus down
bindkey ^[[1;5C focus right
bindkey ^[[1;5D focus left

# Resize regions using SHIFT OPTION/ALT ARROW.
bindkey ^[[1;10A resize -v max
bindkey ^[[1;10B resize -v =
bindkey ^[[1;10C resize -h max
bindkey ^[[1;10D resize -h =

# Window list at the bottom. hostname, left-aligned tabs and redmarked active windows:
hardstatus alwayslastline
hardstatus string '%{= ky}[ %{g}%H %{y}][ %{= kw}%?%-w%?%{R}%n*%t%?(%u)%?%{w}%?%+w%?%?%= %{y}][%{g} %l %{y}][%{B} %m/%d %{W}%c %{y}]'
